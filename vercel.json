{
    "version": 2,
    "functions": {
      "api/chat.py": {
        "maxDuration": 60
      },
      "api/health.py": {
        "maxDuration": 30
      },
      "api/rag_upload.py": {
        "maxDuration": 60
      }
    },
    "rewrites": [
      { 
        "source": "/api/chat", 
        "destination": "/api/chat.py"
      },
      { 
        "source": "/api/health", 
        "destination": "/api/health.py"
      },
      { 
        "source": "/api/rag/upload", 
        "destination": "/api/rag_upload.py"
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Origin", "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS, DELETE" },
          { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
          { "key": "Access-Control-Allow-Credentials", "value": "true" }
        ]
      }
    ]
} 